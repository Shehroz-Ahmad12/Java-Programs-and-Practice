package lms;
import java.util.Scanner;
public class RunnerLMS {

	public static void main(String[] args) {
		Scanner input =new Scanner(System.in);
		int option=0;
		
		do {
			System.out.println("\n\n**************MAIN MENU***********");
			System.out.println("Press 1 to Enter Books Menu ");
			System.out.println("Press 2 to Enter Members Menu");
			System.out.println("Press 3 to Enter Books Issue Menu");
			System.out.println("Press 4 to See Credits");
			System.out.println("Press 5 to Quit");
			option=input.nextInt();
			
			switch(option) {
			case 1:
				int booksOption=0;
				Book b=new Book();
				String bookname;
				do {
				System.out.println("\n\n**************BOOKS MENU************");
				System.out.println("Press 1 to Enter Add Book ");
				System.out.println("Press 2 to Enter Delete Book ");
				System.out.println("Press 3 to Search Book ");
				System.out.println("Press 4 to go back Main Menu");
				booksOption=input.nextInt();
				switch(booksOption)	{
				
				case 1:
					String ID;
					String title;
					String author;
					String publisher;
					int quantity;
					double cost;
					System.out.println("Enter Book ID: ");
					ID=input.nextLine();
					System.out.println("Enter Book Name: ");
					title=input.nextLine();
					System.out.println("Enter Author Name: ");
					author=input.nextLine();
					System.out.println("Enter Publishers: ");
					publisher=input.nextLine();
					System.out.println("Enter Quantity(int): ");
					quantity=input.nextInt();
					System.out.println("Enter Issue Cost(double): ");
					cost=input.nextDouble();
					Book b1 = new Book(ID,title,author,publisher,quantity,cost);
					b1.addBook();
					break;
				case 2:
					
					System.out.println("Enter Book Name to delete: ");
					bookname=input.nextLine();
					b.deleteBook(bookname);
					break;
				case 3:
					System.out.println("Enter Book Name to delete: ");
					bookname=input.nextLine();
					b.searchBook(bookname);
					break;
				
				default:
					System.out.println("Wrong Option!!!");
					break;
				}
				}while(booksOption!=4);
			break;
				
				
			case 2:
				int membersOption=0;
				Member m=new Member();
				String membername;
				do {
				System.out.println("\n\n**************MEMBER MENU************");
				System.out.println("Press 1 to Enter Add Member ");
				System.out.println("Press 2 to Enter Delete Member ");
				System.out.println("Press 3 to Search Member ");
				System.out.println("Press 4 to go back Main Menu ");
				membersOption=input.nextInt();
				
				switch(membersOption) {
				case 1:					
					System.out.println("\n*******ADD MEMBER********\n");
					String memberID,name,cnic,phoneNO,email;
					Address address;
					int houseNo,StreetNo;
					String sector,city,country;
					Date startDate;
					int day, month,year;
					System.out.println("Enter Member ID: ");
					memberID=input.nextLine();
					System.out.println("Enter Member Name: ");
					name=input.nextLine();
					System.out.println("Enter Cnic: ");
					cnic=input.nextLine();
					System.out.println("Enter Phone No: ");
					phoneNO=input.nextLine();
					System.out.println("Enter Email: ");
					email=input.nextLine();
					System.out.println("Enter House no: ");
					houseNo=input.nextInt();
					System.out.println("Enter Street NO: ");
					StreetNo=input.nextInt();
					System.out.println("Enter Sector : ");
					sector=input.nextLine();
					System.out.println("Enter City: ");
					city=input.nextLine();
					System.out.println("Enter Country: ");
					country=input.nextLine();
					System.out.println("Enter Date: ");
					System.out.println("Enter Day: ");
					day=input.nextInt();
					System.out.println("Enter Month: ");
					month=input.nextInt();
					System.out.println("Enter Year: ");
					year=input.nextInt();
					startDate=new Date(day,month,year);
					address=new Address(houseNo,StreetNo,sector,city,country);
					Member m1=new Member(name,cnic,email,phoneNO,address,memberID,startDate);
					m.addMember(m1);
					System.out.println("MEMBER ADDED SUCCESSFULLY");
					break;
				case 2:
					membername=input.nextLine();
					m.deleteMember(membername);
					System.out.println("MEMBER DELETED SUCCESSFULLY");
					break;
				case 3:
					membername=input.nextLine();
					m.searchMember(membername).display();
					break;
				default:
					System.out.println("Wrong option");
					break;
				}
			}while(membersOption!=4);
			break;
			case 3:
				
				
			
				break;
			case 4:
				System.out.println("Credits");
				System.out.println("Shehroz Ahmad");
				System.out.println("SP19-BCS-032");
				break;
			default:
				System.out.println("Wrong Option!!!");
				break;
			}}while(option!=5);
		
		
		
}
}