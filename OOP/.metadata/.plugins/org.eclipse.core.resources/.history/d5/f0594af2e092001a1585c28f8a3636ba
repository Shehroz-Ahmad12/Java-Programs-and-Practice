package question2;

public class Order {
private Burger b;
private Pizza p;
private Customer c;
private double totalBill;

public Order(Burger b, Pizza p, Customer c, double totalBill) {
	super();
	this.b = b;
	this.p = p;
	this.c = new Customer (c);
	this.totalBill = totalBill;
}

public Burger getB() {
	return b;
}

public void setB(Burger b) {
	this.b = b;
}

public Pizza getP() {
	return p;
}

public void setP(Pizza p) {
	this.p = p;
}

public Customer getC() {
	return c;
}

public void setC(Customer c) {
	this.c = c;
}

public double getTotalBill() {
	return totalBill;
}

public void setTotalBill(double totalBill) {
	this.totalBill = totalBill;
}

public double calculateBill() {
	if(this.getC().getMemberShipStatus().equals(true)) {
		return ((this.getCost)-(this.getCost*.10));
	}
}


}
