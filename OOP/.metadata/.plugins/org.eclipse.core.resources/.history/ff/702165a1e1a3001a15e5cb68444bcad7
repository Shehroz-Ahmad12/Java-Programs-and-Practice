package lms;
import java.util.Scanner;
public class RunnerLMS {

	public static void main(String[] args) {
		Scanner input =new Scanner(System.in);
		int option=0;
		
		do {
			System.out.println("**************MAIN MENU***********");
			System.out.println("Press 1 to Enter Books Menu ");
			System.out.println("Press 2 to Enter Members Menu");
			System.out.println("Press 3 to See Credits");
			System.out.println("Press 4 to Quit\n\n");
			option=input.nextInt();
			
			switch(option) {
			case 1:
				int booksOption=0;
				do {
				System.out.println("**************BOOKS MENU************");
				System.out.println("Press 1 to Enter Add Book ");
				System.out.println("Press 2 to Enter Delete Book ");
				System.out.println("Press 3 to Search Book ");
				System.out.println("Press 4 to go back Main Menu \n\n");
				booksOption=input.nextInt();
				switch(booksOption) {
				case 1:
					String ID;
					String title;
					String author;
					String publisher;
					int quantity;
					double cost;
					System.out.println("Enter Book ID: ");
					ID=input.nextLine();
					System.out.println("Enter Book Name: ");
					title=input.nextLine();
					System.out.println("Enter Author Name: ");
					author=input.nextLine();
					System.out.println("Enter Publishers: ");
					publisher=input.nextLine();
					System.out.println("Enter Quantity(int): ");
					quantity=input.nextInt();
					System.out.println("Enter Issue Cost(double): ");
					cost=input.nextDouble();
					Book b1 = new Book(ID,title,author,publisher,quantity,cost);
				}
					
				}while(booksOption!=4);
			}
			
			
		}while(option!=4);
		
		
	}

}
